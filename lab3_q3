#include <stdio.h>

int main() {
	char alph;

	printf(" please input an alphabet: ");
	scanf("%c",&alph);

	if ( alph >= 'A' && alph <= 'Z' )
		alph = alph + 32;

	switch (alph) {
	case 'a':
		printf(" %c is a Vowel\n", alph);
		break;

	case 'e':
		printf(" %c is a Vowel\n", alph);
		break;
	case 'i':
	printf(" %c is a Vowel\n", alph);
	break;
	case 'o':
	printf(" %c is a Vowel\n", alph);
	break;
	case 'u':
	printf(" %c is a Vowel\n", alph);
	break;

	default:
		printf(" %c is a consonant", alph);
	}
	return 0;
}
